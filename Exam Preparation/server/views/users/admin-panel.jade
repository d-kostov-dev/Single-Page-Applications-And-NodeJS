extends ../index
block main-content
    if(usersData !== undefined)
        .row
            .col-lg-12
                .page-header
                    h1#tables Users
                .bs-component
                    table.table.table-striped.table-hover
                        thead
                            tr
                                th Username
                                th First Name
                                th Last Name
                                th Sex
                                th Birth Date
                                th -
                                th -
                        tbody
                            each user in usersData
                                tr
                                    td #{user.username}
                                    td #{user.firstName}
                                    td #{user.lastName}
                                    td #{user.sex}
                                    td #{user.birthDate}
                                    if(user.username !== currentUser.username)
                                        td
                                            a.btn.btn-primary.btn-xs.btn-block(href='/users/edit/#{user._id}') Edit
                                        td
                                            a.btn.btn-danger.btn-xs.btn-block(href='/users/delete/#{user._id}') Delete
                                    else
                                        td
                                        td