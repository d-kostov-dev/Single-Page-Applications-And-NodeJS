extends ../index
block main-content
    .row
        .col-md-3
        .col-lg-6
            .well.bs-component
                form.form-horizontal.form-Login(method="post")
                    legend Register
                    .form-group
                        label.col-lg-3.control-label Username
                        .col-lg-9
                            input.form-control(type='text', placeholder='Username', name="username")
                    .form-group
                        label.col-lg-3.control-label Password
                        .col-lg-9
                            input.form-control(type='password', placeholder='Password', name="password")
                    .form-group
                        label.col-lg-3.control-label Confirm Password
                        .col-lg-9
                            input.form-control(type='password', placeholder='Confirm Password', name="confirmPassword")
                    button.btn.btn-primary.btn-info.btn-block(type='submit') Register
                a.btn.btn-default.btn-sm.btn-block(href='/login') Login
        .col-md-3